<h1 class="text-center">Personajes Peliculas Harry Potter</h1>
<br>


<div class= "row d-flex justify-content-center">
    <% @pages.each do |character| %>
        <div class = "col-10 col-sm-3 mb-5">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><H6> Nombre: <%= character.name%></H6></li>
                    <li class="list-group-item"><H6> Ubicacion: <%= character.location%></H6></li>
                    <li class="list-group-item"><H6> Casa: <%= character.house%></H6></li>
                </ul>
            </div>
        </div>
    <% end %>
</div>

